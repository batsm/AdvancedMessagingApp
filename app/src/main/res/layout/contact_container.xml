<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/card_view"
            app:cardBackgroundColor="@android:color/transparent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp" android:paddingRight="15dp" android:gravity="left|center">
            <ImageView
                    android:layout_width="32dpi"
                    android:layout_height="match_parent" app:srcCompat="@drawable/temp_image"
                    android:id="@+id/imageView" android:layout_weight="1" android:scaleType="fitStart"
            />
            <TextView
                    android:text="Username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/txtContactName" android:layout_weight="1"
                    android:textAppearance="@style/TextAppearance.AppCompat.Button" android:textSize="30sp"
                    android:textColor="@color/colorLightText"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>