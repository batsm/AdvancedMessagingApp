<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateAccount"
        android:background="#1a191e"
>

    <TextView
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="64dp" android:textSize="36sp"
            android:textColor="@color/colorLightText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/txtCreateEmail" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:hint="Enter Email..."
            android:textColor="@color/colorLightText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtCreatePass1" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCreateEmail" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:hint="Enter Password..."
            android:textColor="@color/colorLightText"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/txtCreatePass2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCreatePass1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp" android:hint="Re-enter Password..."
            android:textColor="@color/colorLightText"/>
    <Button
            android:text="Create Account!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnCreateAccount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp" android:layout_marginEnd="32dp"
            style="@style/Widget.AppCompat.Button.Colored" android:textAppearance="@style/TextAppearance.AppCompat"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txtCreateName"/>
    <Button
            android:text="Already have an account? Sign in here!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnSignIn" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat" style="@style/Widget.AppCompat.Button.Colored"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/txtCreateName" android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCreatePass2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:hint="Enter Name" android:textColor="@color/colorLightText"/>
</android.support.constraint.ConstraintLayout>